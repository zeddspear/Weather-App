{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    
        "rules": {
          "quotes": [ 2, "double" ]
        },
      
        "overrides": [
          {
            "files": [ "src/**/*.js" ],
            "rules": {
              "quotes": [ 2, "single" ]
            }
          }
        ]
     
    }

